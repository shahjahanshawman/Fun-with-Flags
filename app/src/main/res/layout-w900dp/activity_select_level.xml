<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".selectLevel">

    <TextView
        android:id="@+id/clevel"
        android:layout_width="573dp"
        android:layout_height="155dp"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="92dp"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="Choose Level"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/level1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/level1"
        android:layout_width="321dp"
        android:layout_height="170dp"
        android:layout_marginTop="328dp"
        android:background="#4097DC"
        android:fontFamily="@font/comfortaa"
        android:text="Level 1"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/clevel"
        app:layout_constraintStart_toStartOf="@+id/clevel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/level2"
        android:layout_width="320dp"
        android:layout_height="170dp"
        android:layout_marginTop="100dp"
        android:background="#4097DC"
        android:fontFamily="@font/comfortaa"
        android:text="Level 2"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/level1"
        app:layout_constraintTop_toBottomOf="@+id/level1" />

    <Button
        android:id="@+id/level3"
        android:layout_width="320dp"
        android:layout_height="170dp"
        android:layout_marginTop="100dp"
        android:background="#4097DC"
        android:fontFamily="@font/comfortaa"
        android:text="Level 3"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/level1"
        app:layout_constraintTop_toBottomOf="@+id/level2" />
</androidx.constraintlayout.widget.ConstraintLayout>